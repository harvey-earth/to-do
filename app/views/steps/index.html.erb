<p id="notice"><%= notice %></p>

<h1>Steps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Rank</th>
      <th>Goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name %></td>
        <td><%= step.content %></td>
        <td><%= step.rank %></td>
        <td><%= step.goal.name %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_goal_step_path(@goal, step) %></td>
        <td><%= link_to 'Destroy', [@goal, step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_goal_step_path(@goal) %>
